{
    "name": "metadatatransformer",
    "version": "0.0.1",
    "dependencies": {
        "@microsoft/ts-command-line": "^4.2.5",
        "@types/node": "^12.0.8",
        "glob": "^7.1.4",
        "typescript": "~3.5"
    },
    "devDependencies": {
        "@types/jest": "^24.0.13",
        "jest": "^24.8.0",
        "replace": "^1.1.0"
    },
    "scripts": {
        "start": "node dist/executable-index.js",
        "rebuild": "npm run clean && npm run build",
        "build": "npm run restore && tsc",
        "restore": "npm install",
        "clean": "npm run clean:node_modules && npm run clean:dist && npm run clean:package_lock && npm run clean:test_out",
        "clean:node_modules": "if exist node_modules rmdir node_modules /q /s",
        "clean:dist": "if exist dist rmdir dist /q /s",
        "clean:package_lock": "if exist package-lock.json del -f -q package-lock.json",
        "clean:test_out": "if exist test_out rmdir test_out /q /s",
        "test": "npm run build && npm run test:build && npm run test:build:post && npm run test:start",
        "test:build": "npm start -- -v build --pattern=\"/test/**/*.ts\" --root-dir=\".\" --out-dir=\"./test_out\" --source-map --types=node --types=jest --type-roots=\"./node_modules/@types\"",
        "test:build:post": "npx replace \"require\\([\\'\\\"\\\"]\\@[tT][yY][pP][eE][sS]\\/[a-zA-Z]+[\\'\\\"\\\"]\\)\" \"/* typereference */\" -r --include=\"test_out/**/*.test.js\"",
        "test:start": "jest .test.js"
    },
    "main": "./dist/index.js",
    "bin": {
        "custom": "./dist/executable-index.js"
    }
}
